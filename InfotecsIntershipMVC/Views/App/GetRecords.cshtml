@using InfotecsIntershipMVC.DAL.Models;
@model IReadOnlyCollection<RecordEntity>;

@{
    ViewData["Title"] = "Records";
}

<a asp-controller="App" asp-action="FilterRecords">Filter records</a>

<div class="container">
    <div class="row">
        <div class="col">Filename</div>
        <div class="col">Date and time</div>
        <div class="col">Duraion</div>
        <div class="col">Value</div>
    </div>

    @{
        for (int i = Model.Count() - 1; i >= 0; i--)
        {
            var currentModel = @Model.ElementAt(i);

            <div class="row">
                <div class="col">@currentModel.File.Name</div>
                <div class="col">@currentModel.DateTime</div>
                <div class="col">@currentModel.Duraion</div>
                <div class="col">@currentModel.Value</div>
            </div>
        }
    }
</div>
